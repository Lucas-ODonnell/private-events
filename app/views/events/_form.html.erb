<%= form_with model: @event, local: true do |f| %>
  <% if @event.errors.any? %>
    <div>
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
      </h2>
      <ul>
        <% @event.errors.each do |error| %>
          <li>
            <span>
              <i></i>
            </span>
            <%= error.full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, require: true %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description, required: true %>
  </div>

   <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, require: true %>
  </div>

  <div class="field">
    <%= f.label "Start Date" %><br />
    <%= f.date_field :start_date, required: true, placeholder: "dd/mm/yyyy", class: "input" %>
  </div>

  <div class="field">
    <%= f.label "Start Time" %><br />
    <%= f.time_field :start_time, require: true, placeholder: "22:00", class: "input" %>
  </div>

  <div class="field">
    <%= f.label "End Date" %><br />
    <%= f.date_field :end_date, require: true, placeholder: "dd/mm/yyyy", class: "input" %>
  </div>

   <div class="field">
    <%= f.label "End Time" %><br />
    <%= f.time_field :end_time, require: true, placeholder: "24:00", class: "input" %>
  </div>
  <div class="field invite-names">
    <p><strong>Invitation Options:</strong></p>
    <%= f.fields_for :invitations do |invite_form| %>
      <%= invite_form.collection_check_boxes :attendee_id, @attendee_options, :id, :name, { checked: @attendees } do |option| %>
        <p>
          <%= option.check_box %>
          <%= option.label %>
        </p>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>


