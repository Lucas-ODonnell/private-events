<% if user_signed_in? %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "button is-helper" %>
  <%= link_to 'Edit your Info', edit_user_registration_path, class: "button is-helper" %>
  <%= link_to 'Invitations', edit_all_invitations_path, class: 'button is-helper' %>
<% else%>
  <%= link_to 'Sign Up', new_user_registration_path, class: "button is-helper" %>
  <%= link_to 'Sign In', new_user_session_path, class:  "button is-helper" %>
<% end %>
<h1><center> All Events</center> </h1>
<% if user_signed_in? %>
<p class="button is-info"><%= link_to 'New Event', new_event_path %></p>
<% end %>
 <% @events.each do |event| %>
   <div class="border">
     <p>
     <%= event.title %>
     on
     <%= event.start_date.strftime("%b %-d, %Y")%>
     <%= event.start_time.strftime(" at %l:%M %P")%>
     <%= link_to 'Event Info', event_path(event.id), class: "button is-show" %>
     </p>
   </div>
 <% end %>
